                    <div class="feedback-text">
                        <i class="icofont-quote-right"></i>

                        <p>@feed.Text</p>

                        <div class="profile-content">
                            <img src="~/Uploads/@feed.Photo" alt="~/Uploads/@feed.Photo" />
