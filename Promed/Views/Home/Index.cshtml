                    <div class="thumb-img">
                        <img src="~/Uploads/@item.Photo" alt="~/Uploads/@item.Photo" />
                        <div class="hover-social">
                            <div class="d-table">
                                <div class="d-tablecell">
                                    <ul>
                                        <li>
