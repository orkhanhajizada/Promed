@model VwHome

@{
    Setting setting = ViewBag.Setting as Setting;
}


<div class="hero-slider owl-carousel owl-theme">

    @foreach (var item in Model.Sliders)
    {
        <div class="hs-item" style="background-image:url(../../Uploads/@item.Photo)">
            <div class="d-table">
                <div class="d-tablecell">
                    <div class="hero-text text-center">
                        <h1>@item.Text</h1>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<!-- End Hero Slider -->
<!-- Services -->
<div class="services-area services-box">
    <div class="container">
        <div class="row">
            @foreach (var sub in Model.Subsliders)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="single-card">
                        <div class="thumb-img">
                            <img src="~/Uploads/@sub.Photo" alt="~/Uploads/@sub.Photo" />
                        </div>
                        <div class="caption-text text-center">
                            <h3>@sub.Title</h3>
                            <p>@sub.Text</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Services -->
<!-- About Section -->
<section class="about-section ptb-100">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12 col-lg-6">
                <div class="about-us-img">
                    <img src="~/Uploads/@Model.About.Photo" alt="~/Uploads/@Model.About.Photo">
                </div>
            </div>

            <div class="col-md-12 col-lg-6">
                <div class="about-us-text">
                    <h2>@Model.About.Title</h2>
                    <p>@Html.Raw(Model.About.Text)</p>
                    <a href="@Url.Action("index","about")" class="default-btn">About Us</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End about section -->
<!-- Call To Action -->
<section class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-9">
                <div class="call-to-action-text">
                    <i class="icofont-first-aid"></i>
                    <h3>Health Care Center</h3>
                    <p>if you have any Emerangcy by health problem contact this <span>No. @setting.Phone</span> or contact form</p>
                </div>
            </div>

            <div class="col-md-12 col-lg-3">
                <a href="@Url.Action("index","contact")" class="default-btn">Contact Us</a>
            </div>
        </div>
    </div>
</section>
<!-- End Call To Action -->
<!-- Departments section -->
<section class="department-section pt-100 pb-50 gray-bg">
    <div class="container">
        <div class="section-title">
            <h2>Our Departments</h2>
            <p>We are ready to build your dream future Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorum, beatae. Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
        </div>

        <div class="row">
            @foreach (var dep in Model.Departments)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="single-department">
                        <i class="@dep.Icon"></i>
                        <h3><a href="@Url.Action("details","department",new {Slug= dep.Slug})">@dep.Name</a></h3>
                        <p>@dep.MinAbout</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Departments section -->
<!-- Video Section -->
<section class="video-section ptb-100">
    <div class="container">
        <div class="section-title white-title">
            <h2>Watch Our Video</h2>
            <p>@setting.VideoText</p>
        </div>

        <div class="video-content mb-minus-330">
            <div class="d-table">
                <div class="d-tablecell">
                    <div class="sonar-wrapper">
                        <div class="sonar-emitter">
                            <div class="sonar-wave"></div>
                            <a href="@setting.VideoLink" class="play-video popup-youtube">
                                <i class="icofont-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Video Section -->
<!-- Counter section -->
<div class="counter-section pt-100 pb-70 pt-330">
    <div class="container">
        <div class="row">
            @foreach (var fact in Model.Facts)
            {
                <div class="col-sm-6 col-md-6 col-lg-3">
                    <div class="single-counter">
                        <i class="@fact.Icon"></i>
                        <h3 class="counter">@fact.Count</h3>
                        <p>@fact.Text</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End counter section -->
<!-- Expert Doctors -->
<section class="expert-doctors ptb-100 gray-bg pb-70">
