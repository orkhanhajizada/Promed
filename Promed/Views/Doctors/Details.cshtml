@model Doctor
@{
    ViewBag.Title = "Details";

    List<Doctor> doctors = ViewBag.Doctor as List<Doctor>;
}

<!-- Page Title -->
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7">
                <h2>Doctor</h2>
            </div>

            <div class="col-md-6 col-lg-5">
                <ul>
                    <li><a href="@Url.Action("index","Home")">Home</a></li>
                    <li>Doctor</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title -->
<!-- Doctors Details section -->
<section class="doctors-details ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="doctors-details">
                    <div class="img">
                        <img src="~/Uploads/@Model.Photo" alt="~/Uploads/@Model.Photo">
                    </div>

                    <div class="doctors-desc">
                        <h3>@Model.Name</h3>
                        <p>@Model.About</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-12">
                <div class="doctors-sidebar">
                    <div class="doctors-info">
                        <h4>Profile Details</h4>
                        <ul>
                            <li>Address: <span>@Model.Adress</span></li>
                            <li>Phone: <span>@Model.Phone</span></li>
                            <li>Email: <span>@Model.Email</span></li>
                            <li>Speciality: <span>@Model.Speciality.Name</span></li>
                            <li>Department: <span><a href="@Url.Action("index","departments")">@Model.Department.Name</a></span></li>
                        </ul>
                    </div>

                    <div class="doctors-social">
                        <ul>
                            <li><a href="@Model.Facebook"><i class="icofont-facebook"></i></a></li>
                            <li><a href="@Model.Twitter"><i class="icofont-twitter"></i></a></li>
                            <li><a href="@Model.Google"><i class="icofont-google-plus"></i></a></li>
                            <li><a href="@Model.Linkedin"><i class="icofont-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Doctors Details section -->
<!-- Call To Action -->
<section class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="call-to-action-text">
                    <i class="icofont-first-aid"></i>
                    <h3>Health Care Center</h3>
                    <p>if you have any Emerangcy by health problem contact this <span>No. 035 687 9514</span> or contact form</p>
                </div>
            </div>

            <div class="col-lg-3">
                <a href="@Url.Action("index","contact")" class="default-btn">Contact Us</a>
            </div>
        </div>
    </div>
</section>
<!-- End Call To Action -->
